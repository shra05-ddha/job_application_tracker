# ==============================================================
# Django Environment Configuration (Example)
# ==============================================================

DEBUG=True
SECRET_KEY=example-key
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================
# Database Configuration
# ==============================================================

# Set USE_RDS=True if connecting to AWS RDS (MySQL)
# Set USE_RDS=False to use local SQLite for testing or evaluation
USE_RDS=False

# AWS RDS Settings (only required if USE_RDS=True)
# DB_NAME=your_rds_database_name
# DB_USER=your_rds_username
# DB_PASSWORD=your_rds_password
# DB_HOST=your_rds_endpoint.amazonaws.com
# DB_PORT=3306

# ==============================================================
# Localization
# ==============================================================

TIME_ZONE=Asia/Kolkata

# ==============================================================
# Email Configuration
# ==============================================================

# For Gmail SMTP (used by Shraddha for follow-up email reminders)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_app_password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=your_email@example.com

# For local testing (no emails will actually be sent)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
